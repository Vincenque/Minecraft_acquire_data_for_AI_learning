{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "if not exist \"${workspaceFolder}\\bin\" mkdir \"${workspaceFolder}\\bin\" && gcc -I${workspaceFolder}/headers -LC:/MinGW/lib ${workspaceFolder}/source/main.c -o ${workspaceFolder}/bin/program -lmingw32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the program using GCC after ensuring the bin folder exists."
        }
    ]
}